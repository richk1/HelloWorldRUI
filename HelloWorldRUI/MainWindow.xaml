<reactiveui:ReactiveWindow x:Class="HelloWorldRUI.MainWindow"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:helloworldrui="clr-namespace:HelloWorldRUI"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                           xmlns:reactiveui="http://reactiveui.net"
                           Title="HelloWorld RUI"
                           Width="280"
                           Height="100"
                           MinWidth="280"
                           MinHeight="100"
                           x:TypeArguments="helloworldrui:AppViewModel"
                           WindowStartupLocation="CenterScreen"
                           mc:Ignorable="d">
  <StackPanel>
    <TextBlock x:Name="GreetingTextBlock"
               Margin="20,10,20,10" HorizontalAlignment="Center"
               FontSize="16" FontWeight="SemiBold" />
    <TextBlock x:Name="LangTextBlock" HorizontalAlignment="Center" />
  </StackPanel>
</reactiveui:ReactiveWindow>
