<Window x:Class="HelloWorldBasic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HelloWorldBasic"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Hello World Basic"
        Width="300"
        Height="100"
        MinWidth="280"
        MinHeight="100"
        mc:Ignorable="d">
  <StackPanel>
    <TextBlock x:Name="GreetingTextBlock"
               Margin="20,10,20,10" HorizontalAlignment="Center"
               FontSize="16" FontWeight="SemiBold" />
    <TextBlock x:Name="LangTextBlock" HorizontalAlignment="Center" />
  </StackPanel>
</Window>
